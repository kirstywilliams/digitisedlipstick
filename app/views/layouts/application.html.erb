<!DOCTYPE html>
<html>
<head>
	<title><%= SITE_BASE_TITLE %> <%= yield(:title) %></title>

	<!-- Meta -->
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="keywords" content="<%= SITE_KEYWORDS %>"/>
	<meta name="description" content="<%= SITE_DESCRIPTION %>"/>

	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">

	<!-- Site Icons -->
	<link rel="apple-touch-icon" sizes="57x57" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/57x57.png")}" %>">
	<link rel="apple-touch-icon" sizes="60x60" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/60x60.png")}" %>">
	<link rel="apple-touch-icon" sizes="72x72" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/72x72.png")}" %>">
	<link rel="apple-touch-icon" sizes="76x76" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/76x76.png")}" %>">
	<link rel="apple-touch-icon" sizes="114x114" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/114x114.png")}" %>">
	<link rel="apple-touch-icon" sizes="120x120" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/120x120.png")}" %>">
	<link rel="apple-touch-icon" sizes="144x144" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/144x144.png")}" %>">
	<link rel="apple-touch-icon" sizes="152x152" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/152x152.png")}" %>">
	<link rel="apple-touch-icon" sizes="180x180" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/180x180.png")}" %>">
	<link rel="icon" type="image/png" sizes="192x192"  href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/192x192.png")}" %>">

	<link rel="icon" type="image/png" sizes="32x32" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/32x32.png")}" %>">
	<link rel="icon" type="image/png" sizes="96x96" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/96x96.png")}" %>">
	<link rel="icon" type="image/png" sizes="16x16" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/16x16.png")}" %>">
	<link rel="manifest" href="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/manifest.json")}" %>">
	
	<!-- Open Graph -->
	<link href="https://plus.google.com/+<%= GOOGLE_PLUS_NAME %>/posts" rel="publisher">
	
	<!-- Application-specific meta tags -->
	<!-- Windows 8: see http://msdn.microsoft.com/en-us/library/ie/dn255024%28v=vs.85%29.aspx for details -->
	<meta name="application-name" content="<%= APP_NAME %>" />
	<meta name="msapplication-TileColor" content="#ffffff" />
	<meta name="msapplication-TileImage" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("favicon/ms/144x144.png")}" %>" />
	<meta name="theme-color" content="#ffffff" />
	<meta name="msapplication-square150x150logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/150x150/logo.png")}" %>" />
	<meta name="msapplication-square310x310logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/310x310/logo.png")}" %>" />
	<meta name="msapplication-square70x70logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/70x70/logo.png")}" %>" />
	<meta name="msapplication-wide310x150logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/310x150/logo.png")}" %>" />
	
	<!-- Twitter: see https://dev.twitter.com/docs/cards/types/summary-card for details -->
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:site" content="@<%= TWITTER_NAME %>" />
	<meta name="twitter:title" content="<%= APP_NAME %>" />
	<meta name="twitter:description" content="<%= SITE_DESCRIPTION %>" />
	<meta name="twitter:image" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/opengraph.png")}" %>" />
	
	<!-- Facebook (and some others) use the Open Graph protocol: see http://ogp.me/ for details -->
	<meta property="og:title" content="<%= APP_NAME %>" />
	<meta property="og:type" content="company" />
	<meta property="og:site_name" content="<%= SITE_BASE_TITLE %>" />
	<meta property="og:description" content="<%= SITE_DESCRIPTION %>" />
	<meta property="og:url" content="http://<%= SITE_DOMAIN %>" />
	<meta property="og:image" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/opengraph.png")}" %>" />
	<meta property="og:image:type" content="image/jpeg" />
	<meta property="og:image:width" content="1200" />
	<meta property="og:image:height" content="630" />
	
	<html itemscope itemtype="http://schema.org/Organization">
	<meta itemprop="name" content="<%= APP_NAME %>" />
	<meta itemprop="description" content="<%= SITE_DESCRIPTION %>" />
	<meta itemprop="image" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/opengraph.png")}" %>" />
	
	<!-- Assets -->
	<!-- CSS -->
	<%= stylesheet_link_tag 'application', media: 'all' %>
	
	<!-- JAVASCRIPT -->
	<%= javascript_include_tag 'application' %>
	
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	ga('create', "<%= SITE_GOOGLE_ANALYTICS %>", "<%= SITE_DOMAIN %>");
	ga('require', 'displayfeatures');
	ga('send', 'pageview');

	</script>

	<%= yield(:head_controller_js) %>
	
	<%= csrf_meta_tags %>
</head>
<body id="site">
			
	<%= yield %>
	<%= yield(:foot_controller_js) %>
</body>
</html>