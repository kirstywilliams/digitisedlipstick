<!DOCTYPE html>
<html>
<head>
	<title><%= SITE_BASE_TITLE %> <%= yield(:title) %></title>
	<!-- Meta -->
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="keywords" content="<%= SITE_KEYWORDS %>"/>
	<meta name="description" content="<%= SITE_DESCRIPTION %>"/>

	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">

	<!-- Assets -->
	<%= stylesheet_link_tag 'application', media: 'all' %>
	<%= javascript_include_tag 'application' %>
	
	<!-- Open Graph -->
	<link href="https://plus.google.com/<%= GOOGLE_PLUS_NAME %>/posts" rel="publisher">
	
	<!-- Application-specific meta tags -->
	<!-- Windows 8: see http://msdn.microsoft.com/en-us/library/ie/dn255024%28v=vs.85%29.aspx for details -->
	<meta name="application-name" content="<%= APP_NAME %>" /> 
	<meta name="msapplication-TileColor" content="<%= BRAND_COLOR %>" /> 
	<meta name="msapplication-TileImage" content="" />
	<meta name="msapplication-square150x150logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/150x150/logo.png")}" %>" />
	<meta name="msapplication-square310x310logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/310x310/logo.png")}" %>" />
	<meta name="msapplication-square70x70logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/70x70/logo.png")}" %>" />
	<meta name="msapplication-wide310x150logo" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/310x150/logo.png")}" %>" />
	
	<!-- Twitter: see https://dev.twitter.com/docs/cards/types/summary-card for details -->
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:site" content="@<%= TWITTER_NAME %>" />
	<meta name="twitter:title" content="<%= APP_NAME %>" />
	<meta name="twitter:description" content="<%= SITE_DESCRIPTION %>" />
	<meta name="twitter:image" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/opengraph.png")}" %>" />
	
	<!-- Facebook (and some others) use the Open Graph protocol: see http://ogp.me/ for details -->
	<meta property="og:title" content="<%= APP_NAME %>" />
	<meta property="og:type" content="company" />
	<meta property="og:site_name" content="<%= APP_NAME %>" />
	<meta property="og:description" content="<%= SITE_DESCRIPTION %>" />
	<meta property="og:url" content="http://<%= SITE_DOMAIN %>" />
	<meta property="og:image" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/opengraph.png")}" %>" />
	<meta property="og:image:type" content="image/jpeg" />
	<meta property="og:image:width" content="1200" />
	<meta property="og:image:height" content="630" />
	
	<html itemscope itemtype="http://schema.org/Organization">
	<meta itemprop="name" content="<%= APP_NAME %>" />
	<meta itemprop="description" content="<%= SITE_DESCRIPTION %>" />
	<meta itemprop="image" content="<%= "#{request.protocol}#{request.host_with_port}#{asset_path("branding/opengraph.png")}" %>" />
	
	<%= favicon_link_tag 'favicon.ico' %>
	
	<script>
	(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	ga('create', "<%= SITE_GOOGLE_ANALYTICS %>", "<%= SITE_DOMAIN %>");
	ga('require', 'displayfeatures');
	ga('send', 'pageview');

	</script>
	
	<%= csrf_meta_tags %>
</head>
<body>

	<header class="container">
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container-fluid">
				<div class="navbar-header">
					<%= link_to "#{APP_NAME}", root_path, class: 'navbar-brand' %>
					
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-custom"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
					</button>
				</div><!-- ./navbar-header -->
				<div class="collapse navbar-collapse navbar-custom">
					<ul class="nav navbar-nav navbar-right">
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown Menu <span class="caret"></span></a>
							<ul class="dropdown-menu" role="menu">
								<li><%= link_to 'Menu Item 1', '#' %></li>
								<li class="divider"></li>
								<li><%= link_to 'Menu Item 2', '#' %>
								</li>
							</ul>
						</li>
					</ul><!-- ./navbar-right -->
				</div><!-- ./navbar-collapse -->
			</div><!-- ./container-fluid -->
		</nav><!-- ./navbar -->
	</header><!-- ./container -->

	<div class="main container">
		<%= flash_messages if show_layout_flash? %>

		<div class="row">
			<%= yield %>
		</div><!-- ./row -->
	</div><!-- ./main/container -->

</body>
</html>